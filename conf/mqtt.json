{
    "CONFIG": {
        "CONF_FILE": "/etc/mosquitto/conf.d/default.conf",
        "PASSWD_FILE": "/etc/mosquitto/passwd"
    },
    "BROKER": {
        "HOST": "localhost",
        "PORT": 1883
    },
    "CERT": {
        "TYPE": "self-signed",
        "DAYS": 365,
        "SUBJECT": {
            "C": "US",
            "ST": "Alaska",
            "L": "Fairbanks",
            "O": "Univeristy of Alaska Fairbanks",
            "OU": "Alaska Center for Energy and Power",
            "CN": "camio-mqtt-broker.acep.uaf.edu"
        }
    },
    "TLS" : {
        "ENABLED": true,
        "HOST": "",
        "PORT": 8883,
        "CA_KEY": "/etc/mosquitto/ca_certificates/ca.key",
        "CA_CERT": "/etc/mosquitto/ca_certificates/ca.crt",
        "SERVER_KEY": "/etc/mosquitto/certs/server.key",
        "SERVER_CSR": "/etc/mosquitto/certs/server.csr",
        "SERVER_CERT": "/etc/mosquitto/certs/server.crt"
    },
    "AUTH": {
        "ENABLED": true,
        "USERS": [
            "camio"
        ]
    }
}